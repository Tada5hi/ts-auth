{
    "name": "@authup/server-api",
    "version": "0.45.0",
    "description": "This is a standalone application.",
    "main": "dist/index.js",
    "scripts": {
        "debug": "node --inspect dist/cli/index.js start",
        "cli": "node dist/cli/index.js",
        "cli-dev": "ts-node src/cli/index.ts",
        "build": "rm -rf ./dist && tsc -p tsconfig.build.json",
        "test": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_ENV=test jest --config ./test/jest.config.js --detectOpenHandles --runInBand --testTimeout=10000",
