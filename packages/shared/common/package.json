{
    "name": "@authelion/common",
    "version": "0.3.10",
    "description": "Typescript auth type, interface & constants package.",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build:types": "tsc  -p tsconfig.build.json --emitDeclarationOnly",
        "build:js": "rollup -c",
        "build": "rimraf dist && npm run build:types && npm run build:js",
        "build:watch": "npm run build -- --watch",
        "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
        "test:coverage": "cross-env NODE_ENV=test jest --config ./test/jest.config.js --coverage"
    },
    "keywords": [
        "auth",
        "module",
        "typescript",
        "template",
        "auth-template",
        "oauth2",
        "oauth2-client",
        "ability",
        "permission",
        "header",
        "bearer",
        "basic"
    ],
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tada5hi/authelion.git"
    },
    "bugs": {
        "url": "https://github.com/Tada5hi/authelion/issues"
    },
    "homepage": "https://github.com/Tada5hi/authelion#readme",
    "dependencies": {
        "@ebec/http": "^0.0.3",
        "@types/jsonwebtoken": "^8.5.9",
        "@ucast/mongo2js": "^1.3.3",
        "change-case": "^4.1.2",
        "nanoid": "^3.3.4",
        "smob": "^0.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.19.3",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-typescript": "^7.18.6",
        "@rollup/plugin-babel": "^6.0.0",
        "@rollup/plugin-commonjs": "^23.0.0",
        "@rollup/plugin-node-resolve": "^15.0.0",
        "hapic": "^0.0.2",
        "rapiq": "^0.0.6",
        "rollup": "^3.2.3",
        "rollup-plugin-terser": "^7.0.2"
    },
    "peerDependencies": {
        "hapic": "^0.x",
        "rapiq": "^0.x"
    },
    "publishConfig": {
        "access": "public"
    }
}
