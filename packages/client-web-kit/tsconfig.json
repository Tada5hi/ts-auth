{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "paths": {
            "@authup/kit": ["./packages/kit/src"],
            "@authup/errors": ["./packages/errors/src"],
            "@authup/core-kit": ["./packages/core-kit/src"],
            "@authup/core-http-kit": ["./packages/core-http-kit/src"],
            "@authup/core-realtime-kit": ["./packages/core-realtime-kit/src"],
            "@authup/rules": ["./packages/rules/src"],
            "@authup/schema": ["./packages/schema/src"],
        }
    },
    "include": [
        "types/**/*.d.ts",
        "src/**/*.ts"
    ]
}
