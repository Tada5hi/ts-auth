{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "lib": [
            "dom",
            "ES6",
            "dom.iterable",
            "scripthost"
        ],
        "plugins": [
            {
                "transform":"@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ],
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "module": "ESNext",
        "jsx": "preserve",

        // Babel test opt
        "declaration": true,
        "isolatedModules": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.vue"
    ]
}
