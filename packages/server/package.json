{
    "name": "@typescript-auth/server",
    "version": "2.0.0-alpha.12",
    "description": "This package can be used as simple server in standalone mode or as an extension.",
    "main": "dist/index.js",
    "scripts": {
        "cli": "ts-node src/cli/index.ts",
        "build": "rm -rf ./dist && tsc -p tsconfig.build.json",
        "test": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_ENV=test jest --config ./test/jest.config.js --detectOpenHandles --runInBand --testTimeout=6000",
        "test:coverage": "npm run test -- --coverage"
    },
    "files": [
        "dist/",
        "src/http/controllers"
    ],
    "bin": {
        "auth-server": "dist/cli/index.js"
    },
    "keywords": [
        "auth",
        "module",
        "server",
        "typescript",
        "oauth2",
        "oauth2-client",
        "middleware",
        "key-pair",
        "password",
        "token"
    ],
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tada5hi/typescript-auth.git"
    },
    "bugs": {
        "url": "https://github.com/Tada5hi/typescript-auth/issues"
    },
    "homepage": "https://github.com/Tada5hi/typescript-auth#readme",
    "dependencies": {
        "@decorators/express": "^2.6.0",
        "@trapi/swagger": "^0.2.14",
        "@typescript-auth/core": "^1.1.0",
        "@typescript-auth/domains": "^0.0.5",
        "@typescript-error/http": "^1.1.2",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.1",
        "change-case": "^4.1.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^11.0.0",
        "express": "^4.17.2",
        "express-validator": "^6.14.0",
        "jsonwebtoken": "^8.5.1",
        "mustache": "^4.2.0",
        "ora": "^4.0.3",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^5.0.2",
        "swagger-ui-express": "^4.3.0",
        "typeorm": "^0.2.41",
        "typeorm-extension": "^1.0.3",
        "yargs": "^17.0.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/change-case": "^2.3.1",
        "@types/express": "^4.17.12",
        "@types/express-validator": "^3.0.0",
        "@types/jest": "^27.4.0",
        "@types/jsonwebtoken": "^8.5.7",
        "@types/mustache": "^4.1.1",
        "@types/nanoid": "^3.0.0",
        "@types/supertest": "^2.0.11",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/yargs": "^17.0.8",
        "coveralls": "^3.1.0",
        "jest": "^27.4.7",
        "jest-serial-runner": "^1.2.0",
        "supertest": "^6.2.1",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.1.0",
        "typescript": "^4.5.4"
    },
    "publishConfig": {
        "access": "public"
    }
}
